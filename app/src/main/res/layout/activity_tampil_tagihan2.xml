<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtKodeMeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B1231"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTahun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2021"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:textSize="14sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/txtBulan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maret"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:textSize="14sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/txtNamaPelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amir"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:textSize="14sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/txtGolongan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menengah Atas"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:textSize="14sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/txtTanggalCatat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selasa, 18 Mei 2021"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:textSize="14sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/txtJumlahMeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12345"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:textSize="14sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/txtFotoMeter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Foto Meter"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:textSize="14sp"
            android:textStyle="bold"  />

        <TextView
            android:id="@+id/txtPegawaiPencatat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pegawai Adi"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:textSize="14sp"
            android:textStyle="bold"  />

        <Button
            android:id="@+id/button"
            android:layout_width="73dp"
            android:layout_height="38dp"
            android:text="Edit"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>